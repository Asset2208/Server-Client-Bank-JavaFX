        <ImageView fitHeight="79.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/admin.png" />
            </image>
        </ImageView>
        <Label layoutX="213.0" layoutY="14.0" opacity="0.71" text="List of users" textFill="#0d0d0d">
            <font>
                <Font name="Eras Medium ITC" size="54.0" />
