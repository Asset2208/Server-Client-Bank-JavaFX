                <Font size="20.0" />
            </font>
        </TextField>
        <Button fx:id="showMoreInfBtn" layoutX="237.0" layoutY="378.0" mnemonicParsing="false" opacity="0.91" prefHeight="51.0" prefWidth="239.0" style="-fx-background-color: #0B0B3B; -fx-background-radius: 100; -fx-text-fill: white;" text="More information">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </children>
