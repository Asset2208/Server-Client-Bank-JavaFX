<AnchorPane prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ShowConsumersController">
    <children>
        <ImageView fitHeight="450.0" fitWidth="700.0">
            <image>
                <Image url="@../images/adminBackground.jpg" />
            </image>
